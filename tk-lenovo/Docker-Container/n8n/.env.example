# n8n Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# =========================
# Timezone
# =========================
GENERIC_TIMEZONE=America/New_York
TZ=America/New_York

# =========================
# n8n core (non-secret)
# =========================
NODE_ENV=production
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_COMMUNITY_PACKAGES_ALLOW_TOOL_USAGE=true
N8N_RUNNERS_ENABLED=true
N8N_DEFAULT_BINARY_DATA_MODE=default

# Enable Execute Command node (required for AI CLI workflows)
NODES_EXCLUDE=[]

# =========================
# Database (Postgres connection info)
# =========================
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n

# =========================
# Public URLs (ngrok)
# =========================
N8N_EDITOR_BASE_URL=https://your-subdomain.ngrok-free.dev
WEBHOOK_URL=https://your-subdomain.ngrok-free.dev

# =========================
# Cookies
# =========================
N8N_SECURE_COOKIE=true

# =========================
# n8n encryption (CRITICAL - generate with: openssl rand -hex 32)
# =========================
N8N_ENCRYPTION_KEY=<generate_with_openssl_rand_hex_32>

# =========================
# Database password (generate with: openssl rand -hex 32)
# =========================
DB_POSTGRESDB_PASSWORD=<generate_with_openssl_rand_hex_32>

# =========================
# Queue mode (Redis)
# =========================
EXECUTIONS_MODE=queue
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_PASSWORD=<generate_with_openssl_rand_hex_32>
OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true

# =========================
# Paths (AI CLI data directories)
# =========================
GEMINI_DATA_PATH=/home/tk-lenovo/.gemini
GEMINI_TMP_PATH=/home/tk-lenovo/.gemini-tmp
CODEX_DATA_PATH=/home/tk-lenovo/.codex
